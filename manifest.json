{
    "manifest_version": 2,
    "minimum_chrome_version": "49",

    "name": "斗鱼HTML5播放器",
    "description": "基于 flv.js 的斗鱼HTML5播放器.",
    "version": "0.3.1",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "icons": {
        "256": "icon.png"
    },
  
    "background": {
        "scripts": ["dist/background.js"],
        "persistent": true
    },

    "permissions": [
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "*://*.douyu.com/*",
        "*://*.douyucdn.cn/*",
        "*://*/*"
    ],
    
    "web_accessible_resources": [
        "icon.png",
        "libs/JSocket.js",
        "libs/md5.js",
        "libs/less.min.js",
        "src/img/*",
        "src/*",
        "src/sharedWorker/sharedWorker.html",
        "dist/*",
        "*://*/*"
    ],
    
    "content_scripts": [
        {
            "matches": [
                "*://*.douyu.com/*"
            ],
            "js": ["dist/douyuCS.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.panda.tv/*"
            ],
            "js": ["dist/pandaCS.js"]
        }
    ]
}