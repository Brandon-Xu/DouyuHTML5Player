{
    "manifest_version": 2,
    "minimum_chrome_version": "48",

    "name": "斗鱼HTML5播放器",
    "description": "基于 flv.js 的斗鱼HTML5播放器.",
    "version": "0.2.3",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "icons": {
        "256": "icon.png"
    },
  
    "background": {
        "scripts": ["src/background.js"],
        "persistent": true
    },

    "permissions": [
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "*://*.douyu.com/*",
        "*://*.douyucdn.cn/*",
        "*://*/*"
    ],
    
    "web_accessible_resources": [
        "icon.png",
        "libs/JSocket.js",
        "libs/md5.js",
        "libs/less.min.js",
        "src/douyuClient.js",
        "src/danmu.less",
        "src/douyu_inject.js",
        "src/backupFunction.js",
        "src/img/*",
        "src/sharedWorker/sharedWorker.html",
        "dist/*",
        "*://*/*"
    ],
    
    "content_scripts": [
        {
            "matches": [
                "*://*.douyu.com/*"
            ],
            "js": [
                "libs/flv.min.js",
                "libs/md5.js",
                "src/hookfetch.js",
                "src/danmuPlayer.js",
                "src/playerMenu.js",
                "src/cs.js"
            ]
        },
        {
            "matches": [
                "*://*.douyu.com/*"
            ],
            "js": ["src/start.js"],
            "run_at": "document_start"
        }
    ]
}